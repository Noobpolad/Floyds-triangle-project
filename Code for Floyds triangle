#include <iostream>

using namespace std;
void floydsTriangle();

int main()
{
    floydsTriangle();
    return 0;
}

void floydsTriangle(){

    int userInput;
    int x;
    int arrPos=0;
    cout << "Put the number:";
    cin >> userInput;
    cout << endl;
    if(userInput%2 == 0){
        x = userInput * (userInput / 2) + (userInput / 2);
    }
    else{
        x = userInput * ((userInput + 1) / 2);
    }

    int arr[x];

    for(int a = 0; a < x; a++){
        arr[a] = a + 1;
    }

       for(int numOfRows = 1; numOfRows <= userInput; numOfRows++){
            if(numOfRows%2 == 0){
                for(int number = 0 ; number < numOfRows; number++){
                    cout << arr[arrPos] << " ";
                    arrPos++;
                }
            }
            else{
                for(int number = 0; number < numOfRows; number++){
                    cout << arr[arrPos] << " ";
                    arrPos++;
                }
            }
            cout << endl;
        }
}
