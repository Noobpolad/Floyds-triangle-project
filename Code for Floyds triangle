void floydsTriangle();

int main()

{

    floydsTriangle();

    return 0;

}

void floydsTriangle(){

    int userInput;

    int x=1;

    cout << "Put the number:";

    cin >> userInput;

    cout << endl;

       for(int numOfRows = 1; numOfRows <= userInput; numOfRows++){

                for(int number = 1 ; number <= numOfRows; number++){

                    if(x<11){
                        cout<<" ";
                    }

                    if(x==9){
                    cout << x <<"";
                    }

                    else{
                    cout << x <<" ";
                    }

                    x++;

                }

            cout << endl;

        }

}
