void floydsTriangle(){

    int userInput;

    int x=1;

    cout << "Put the number:";

    cin >> userInput;

    cout << endl;

       for(int numOfRows = 1; numOfRows <= userInput; numOfRows++){

                for(int number = 1 ; number <= numOfRows; number++){


                    cout <<setw(4)<< x;


                    x++;

                }

            cout << endl;

        }

}
